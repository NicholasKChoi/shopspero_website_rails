<!DOCTYPE html>
<html>
<head>
  <title>Workspace</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="https://fonts.googleapis.com/css?family=Josefin+Sans|Josefin+Slab|Raleway" rel="stylesheet">
</head>
<body>
    <% unless defined? @indexPage %>
    <div class="meta_container">
        <div class="header_container">
            <p class="notice"><%= notice %></p>
            <p class="alert"><%= alert %></p>
            <div class="header">
                <a class="header_link" href="/shop/">SHOP SPERO</a>
                <% unless defined? @no_nav %>
                    <div class="navigation">
                        <ul>
                            <%= link_to 'Originals', shop_page_path('Originals') %>
                            <%= link_to 'Women', shop_page_path('Women') %>
                            <%= link_to 'Men', shop_page_path('Men') %>
                            <%= link_to 'About', shop_page_path('About') %>
                        </ul>
                    </div>
                <% end %>
            </div>
        </div>
        <% unless not defined? @logged_in %>
            <div id="login" class="button smtext loginbtn">
                <%= link_to 'login', new_user_session_url %>
            </div>
        <% end %>
    </div>
    <% end %>

<%= yield %>

</body>
</html>
